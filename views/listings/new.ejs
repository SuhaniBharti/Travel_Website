
   <%layout("/layouts/boilerplate") %>
  <body>
     <div class="row">
    <div class="col-8 offset-2">
      <br/>
    <h3>Create a New Listing</h3>
   
    <form method="POST" action="/listings">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="enter title" type="text" required class="form-control"/>
      </div>
    
      <div class="mb-3">
         <label for="description" class="form-label">Description</label>
        <textarea
        name="listing[description]"
        placeholder="enter description"
        required
        class="form-control"

      ></textarea>
      </div>
   
      <div class="mb-3">
         <label for="title" class="form-label">Image</label>
          <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
        class="form-control"
      />
      </div>
     <div class="row">
           <div class="mb-3 col-md-4">
         <label for="title" class="form-label">Price</label>
            <input name="listing[price]" placeholder="enter price" 
            type="number" 
            class="form-control"
            />
            
      </div>
     
      <div class="mb-3 col-md-8">
         <label for="title" class="form-label">Country</label>
       
        <input name="listing[country]" placeholder="enter country" type="text" 
        class="form-control"
        />
      </div>
     </div>
    
      
     <div class="mb-3">
       <label for="title" class="form-label">Location</label>
       <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        class="form-control"
      />
     </div>
      
      
      <button class="btn btn-dark ">Add</button>
     
    </form>
     <br/>
  </body>
  </div>
</div>
</div>
